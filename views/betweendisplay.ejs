<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Petty Cash BOOk</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="images/wallet.png"
      style="border-radius: 2rem"
    />
    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="css/bootstrap.min.css" />

    <link rel="stylesheet" href="css/bootstrap-icons.css" />

    <link rel="stylesheet" href="css/owl.carousel.min.css" />

    <link rel="stylesheet" href="css/owl.theme.default.min.css" />

    <link href="css/templatemo-pod-talk.css" rel="stylesheet" />
  </head>
  <body>
    <main>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-md">
        <div class="container">
          <a class="navbar-brand me-lg-5 me-0" href="login">
            <img
              src="images/logo.png"
              class="logo-image nav-logo img-fluid"
              alt="petty cash"
            />
          </a>
          <div class="ms-4">
            <a
              href="login"
              class="btn custom-btn custom-border-btn smoothscroll"
              >Get started</a
            >
          </div>
        </div>
      </nav>

      <!-- Login Section -->
      <section class="hero-section">
        <div class="container">
          <section class="vh-100 gradient-custom">
            <div class="container py-2 h-100">
              <div class="container">
                <h2 class="fw-bold mb-4"><%=startdate%> to <%= enddate%></h2>
                <table class="table table-striped table-bordered">
                  <thead class="table-success">
                    <tr>
                      <th scope="col">S.No</th>
                      <th scope="col">Date</th>
                      <th scope="col">Opening Balances</th>
                      <th scope="col">TOtal Income</th>
                      <th scope="col">Total Expenditure</th>
                      <th scope="col">Current Balance</th>
                    </tr>
                  </thead>
                  <tbody class="table-striped table-primary">
                    <% data.forEach( (item,index) => { %>
                    <tr>
                      <td><%= index+1 %></td>
                      <td><%= item.date %></td>
                      <td><%= item.yestbalance %></td>
                      <td><%= item.totalincome %></td>
                      <td><%= item.totalexpense %></td>
                      <td><%= item.balance %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <button onclick="window.print()" style="margin-left:42%; background-color: rgba(57, 95, 178, 0.811); font-size: large; font-weight: 700; border-radius: 12px;">Print Report</button>

            </div>
            
          </section>
        </div>
      </section>
    </main>
  </body>
</html>