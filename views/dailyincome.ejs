<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Petty Cash Book</title>
    <link
    rel="icon"
    type="image/x-icon"
    href="images/wallet.png"
    style="border-radius: 2rem"
    />

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/bootstrap-icons.css" />
    <link rel="stylesheet" href="css/owl.carousel.min.css" />
    <link rel="stylesheet" href="css/owl.theme.default.min.css" />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Montserrat", sans-serif;
      }

      .navbar {
        background: #667eea;
        padding: 10px 20px;
      }

      .navbar-brand {
        color: #fff;
        font-weight: 700;
        font-size: 1.2rem;
        text-decoration: none;
      }

      .hero-section {
        background: linear-gradient(to right, #667eea 25%, #ffffff 25%);
        background-size: 400% 100%;
        animation: gradientAnimation 10s ease-in-out infinite;
      }

      @keyframes gradientAnimation {
        0% {
          background-position: 100% 0;
        }
        100% {
          background-position: 0 0;
        }
      }

      .card {
        border-radius: 1rem;
      }

      .form-control {
        border-radius: 0.5rem;
        margin-bottom: 1rem;
        padding: 0.5rem;
      }

      .form-label {
        display: block;
        margin-bottom: 0.5rem;
      }
    </style>
    <link href="css/templatemo-pod-talk.css" rel="stylesheet" />
  </head>
  <body>
    <main>
      <!-- Navbar -->
      <nav class="navbar navbar-expand-md">
        <div class="container">
          <a class="navbar-brand me-lg-5 me-0" href="dashboard">
            <img
              src="images/money-bag.png"
              class="logo-image nav-logo img-fluid"
              alt="petty cash Book"
              style="width: fit-content"
            />
          </a>
          <div class="ms-4">
            <a
              href="dashboard"
              class="btn custom-btn custom-border-btn smoothscroll"
              >Get started</a
            >
          </div>
        </div>
      </nav>

      <!-- Login Section -->
      <section class="hero-section">
        <div class="container">
          <section class="vh-100 gradient-custom">
            <div class="container py-2 h-100">
              <div
                class="row d-flex justify-content-center align-items-center h-100"
              >
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                  <div class="card text-dark" style="border-radius: 1rem">
                    <div class="card-body p-5 text-center">
                      <div class="mb-md-5 mt-md-1 pb-1">
                        <h2 class="fw-bold mb-2 text-uppercase">
                          Daily Income
                        </h2>
                        <form action="/dailyincome" method="post">
                          <div class="form-outline form-dark mb-2">
                            <label for="name">Choose an Income Head:</label>
                            <select name="name" id="name" class="form-control">
                              <% data.forEach((item) => { %>
                              <option value="<%= item.name %>">
                                <%= item.name %>
                              </option>
                              <% }) %>
                            </select>
                          </div>
                          <div class="form-outline form-dark mb-2">
                            <label class="form-label" for="amount"
                              >Amount</label
                            >
                            <input
                              type="number"
                              id="amount"
                              name="amount"
                              class="form-control"
                            />
                          </div>
                          <div class="form-outline form-dark mb-2">
                            <label class="form-label" for="description"
                              >Description</label
                            >
                            <input
                              type="text"
                              id="description"
                              name="description"
                              class="form-control"
                            />
                          </div>
                          <div class="form-outline form-dark mb-2">
                            <label class="form-label" for="date">Date</label>
                            <input
                              type="date"
                              id="date"
                              name="date"
                              class="form-control"
                            />
                          </div>
                          <button
                            class="btn btn-outline-dark btn-lg px-5"
                            type="submit"
                          >
                            Submit
                          </button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </section>
    </main>
    <script>
      // Get the current date
      var currentDate = new Date();

      // Format the date as YYYY-MM-DD
      var year = currentDate.getFullYear();
      var month = (currentDate.getMonth() + 1).toString().padStart(2, "0");
      var day = currentDate.getDate().toString().padStart(2, "0");
      var formattedDate = year + "-" + month + "-" + day;

      // Set the value of the input field
      var dateInput = document.getElementById("date");
      dateInput.value = formattedDate;
    </script>
  </body>
</html>
